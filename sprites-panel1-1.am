panel1_1_files = data/panel1-1.dat data/panel1-1.tab

# The sprites containing some text lines merged from bitmap fonts, are built with `pop0` panel
panel1_1_sprites_text = \
  panel_mblue_bevel-64-baked/text_detail.png \
  panel_mblue_bevel-64-baked/text_uplink.png \
  panel_mblue_bevel-64-baked/text_paused.png

# Sprites representing each weapon, when in pocket and when taken out
panel1_1_weapons_singl_outline = \
  uzi minigun laser ellaser rap persuader flamer h2htaser longrange airstrike beam razorwire \
  qdevastator persuader2 stasisfld soulgun time cerberusiff medi1 medi2 explwire cloneshld item_cybmod item_suitcase
panel1_1_weapons_fourp_outline = \
  nuclgren crazygas kogas elemine explmine

panel1_1_sprites_wep_oln = \
  $(foreach name,$(panel1_1_weapons_singl_outline),panel_mblue_bevel-64-baked/weapon_outline_$(name).sngl.lgt.png) \
  $(foreach name,$(panel1_1_weapons_fourp_outline),panel_mblue_bevel-64-baked/weapon_outline_$(name).foup.lgt.png)
panel1_1_sprites_wep_pnl = \
  $(foreach name,$(panel1_1_weapons_singl_outline),panel_mblue_bevel-64-baked/weapon_outline_$(name).sngl.nrm.png) \
  $(foreach name,$(panel1_1_weapons_fourp_outline),panel_mblue_bevel-64-baked/weapon_outline_$(name).foup.nrm.png)

# Generated elements of the per-agent panel
panel1_1_sprites_agents_panel = \
  $(foreach num,1 2 3 4,panel_mblue_bevel-64-baked/panel_peragent_old_main_number_$(num).png) \
  $(foreach num,1 2 3 4,panel_mblue_bevel-64-baked/panel_peragent_old_part_number_$(num).lgt.png) \
  panel_mblue_bevel-64-baked/panel_weapon_list_old_centr_hlight.png \
  panel_mblue_bevel-64-baked/panel_weapon_list_old_upper_hlight.png

# List of sprites to pass without alterations
panel1_1_sprnames_nomod = \
  frame1_med_lgt_tl frame1_med_lgt_tr frame1_med_lgt_bl frame1_med_lgt_br frame1_med_lgt_al frame1_med_lgt_ar \
  frame1_med_nrm_tl frame1_med_nrm_tr frame1_med_nrm_bl frame1_med_nrm_br frame1_med_nrm_al frame1_med_nrm_ar \
  empty kicked_arrow_left kicked_arrow_right \
  ingame_agent_number_1 ingame_agent_number_2 ingame_agent_number_3 ingame_agent_number_4 \
  panel_agent_number_1 panel_agent_number_2 panel_agent_number_3 panel_agent_number_4 \
  panel_grouping panel_grouping_bar_grp panel_grouping_bar_th \
  panel_sshield_ena_btm panel_sshield_ena_top panel_sshield_nrm_btm panel_sshield_nrm_top \
  panel_weapon_list_old_centr_frame panel_weapon_list_old_upper_frame weapon_bk_empty
panel1_1_sprites_cp = \
  $(foreach name,$(panel1_1_sprnames_nomod),panel_mblue_bevel-64-baked/$(name).png)

data/panel1-1.tab: data/panel1-1.dat

data/panel1-1.dat: panel_mblue_bevel-64-baked/filelist-panel1-1.txt $(top_srcdir)/data/engine-std.pal ${panel1_1_sprites_cp} $(panel1_1_sprites_text) $(panel1_1_sprites_agents_panel) $(panel1_1_sprites_wep_oln) $(panel1_1_sprites_wep_pnl)

panel_mblue_bevel-64-baked/%.txt: $(top_srcdir)/panel_mblue_bevel-64/%.txt
	$(MKDIR_P) "$(@D)"
	cp -p "$<" "$@"

panel_mblue_bevel-64-baked/%.png: $(top_srcdir)/panel_mblue_bevel-64/%.png
	$(MKDIR_P) "$(@D)"
	cp -p "$<" "$@"

# Use ImageMagick to generate light blue sprites from the white ones
# rule with multiple targets is automatically divided into multiple rules with single target
panel_mblue_bevel-64-baked/%.sngl.lgt.png panel_mblue_bevel-64-baked/%.foup.lgt.png: $(top_srcdir)/weapons-outline-18/%.png
	$(MKDIR_P) "$(@D)"
	$(MAGICK_CONVERT) "$<" -colorspace RGB \
        -channel R -evaluate multiply 0.88 \
        -channel G -evaluate multiply 0.92 \
        -channel B -evaluate multiply 0.86 \
        +channel -colorspace RGB "$@"

panel_mblue_bevel-64-baked/panel_peragent_old_main_number_1.png: $(top_srcdir)/panel_mblue_bevel-64/panel_peragent_old_frst_empty.png panel_mblue_bevel-64/panel_agent_number_1.nrm.png
	$(MKDIR_P) "$(@D)"
	$(MAGICK_CONVERT) $< "$(word 2,$+)" -gravity Center -geometry -60-6 -composite "$@"

